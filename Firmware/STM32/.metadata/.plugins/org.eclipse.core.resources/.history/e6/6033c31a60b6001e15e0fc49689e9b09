#ifndef INC_M24256X_H_
#define INC_M24256X_H_

/* Includes*/
#include "stm32u5xx_hal.h" /* Needed for I2C */


/* Defines*/
#define M24256X_DEFAULT_I2C_ADDR (0x00) /* */




/* M24256X Status typedef */
typedef enum {
	M24256X_OK 				= 0x00,
	M24256X_ERROR    		= 0x01,
	M24256X_BUSY    		= 0x02,
	M24256X_TIMEOUT 		= 0x03,
} M24256X_StatusTypeDef;

/* M24256X Device Struct */
typedef struct {
	/* I2C Handle*/
	I2C_HandleTypeDef *i2cHandle;
} M24256X_HandleTypeDef;



/* Initialisation */
M24256X_StatusTypeDef ADP5360_Init(M24256X_HandleTypeDef *dev, I2C_HandleTypeDef *i2cHandle);

/* User Functions */

/* Internal/debug Functions */
M24256X_StatusTypeDef ADP5360_SetAddress(M24256X_HandleTypeDef *dev, uint8_t address); /* Address between 0x00 and 0x07*/

/* Low-Level Functions */
M24256X_StatusTypeDef ADP5360_ReadRegister(M24256X_HandleTypeDef *dev, uint8_t reg, uint8_t *data);
M24256X_StatusTypeDef ADP5360_ReadRegisters(M24256X_HandleTypeDef *dev, uint8_t reg, uint8_t *data, uint8_t size);
M24256X_StatusTypeDef ADP5360_WriteRegister(M24256X_HandleTypeDef *dev, uint8_t reg, uint8_t *data);
M24256X_StatusTypeDef ADP5360_WriteRegisters(M24256X_HandleTypeDef *dev, uint8_t reg, uint8_t *data, uint8_t size);


#endif /* INC_M24256X_H_ */
